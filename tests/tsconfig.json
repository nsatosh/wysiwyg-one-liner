{
  "compilerOptions": {
    "incremental": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "target": "es2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "..",
    "module": "commonjs",
    "types": [
      "node",
      "jest",
      "jest-environment-puppeteer"
    ],
    "lib": [
      "dom",
      "es2017"
    ],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true
  },
  "include": [
    "../src/index.ts",
    "./**/*.test.ts?",
  ]
}